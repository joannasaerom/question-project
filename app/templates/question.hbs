<div class="row">
  <div class="col-sm-10 questionDetail">
      <h1><span class="decorator">Q:</span> {{model.title}}</h1>
      <h4>Posted by {{model.author}}</h4>
      <h6>Asked on {{model.timestamp}}</h6>
      <p>{{model.details}}</p>
      <h4>{{model.answers.length}} Answers</h4>
  </div>
  <div class="col-sm-2">
    {{delete-question question=model deleteQuestion="deleteQuestion"}}
    {{update-question question=model updateQuestion="updateQuestion"}}
    <p><small>Add to your favorite:</small></p>
    <i {{action 'addToFav' model}} class="glyphicon glyphicon-heart"></i>
  </div>
</div>
{{log sortedAnswers}}
{{#each model.answers as |answer|}}
  <hr class="styled">
  {{answer-tile answer=answer deleteAnswer="deleteAnswer"  updateUpvote="updateUpvote" updateDownvote="updateDownvote"}}
{{/each}}
<hr class="styled">
<div class="center">
  {{new-answer saveAnswer="saveAnswer" question=model}}
</div>
